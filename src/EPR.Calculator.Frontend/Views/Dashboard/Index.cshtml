@using EPR.Calculator.Frontend.ViewModels
@model List<DashboardViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
        <p></p>
    </div>
    <div class="govuk-grid-column-one-quarter govuk-body-s account-info">
        <span class="your-name" id="bannerUserName">Jamie Roberts</span> &ensp;
        <a class="account-link" href="details" id="signout-link">Sign out</a>
    </div>
</div>

<div class="govuk-grid-row dashboard-page">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Calculate packaging payments</h1>
        <div class="govuk-grid-row govuk-!-margin-bottom-7">
            <div class="govuk-grid-column-one-half">
                <div class="card">
                    <h2 class="govuk-heading-m govuk-link">
                        <a href="/DefaultParameters/Index" class="govuk-link--no-visited-state">
                            Manage default calculation parameters
                        </a>
                    </h2>
                    <p class="govuk-body">
                        Upload a spreadsheet to update the default parameters for payment calculations. All calculations will automatically use these parameters, unless they are manually changed.
                    </p>
                </div>
            </div>
            <div class="govuk-grid-column-one-half">
                <div class="card">
                    <h2 class="govuk-heading-m"><a href="#" class="govuk-link--no-visited-state">Run a new calculation</a></h2>
                    <p class="govuk-body">
                        The calculation will use the default parameters that your account administrator set up, unless you choose to change any of them.
                    </p>
                </div>
            </div>
        </div>

        <h2 class="govuk-heading-l">Calculations made in this financial year</h2>
        <dl class="govuk-summary-list">
            @foreach (var run in Model)
            {
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        <h3 class="govuk-heading-m govuk-!-margin-bottom-3">
                            @if (run.ShowRunDetailLink)
                            {
                                <a href="@Url.Action("Index", "CalculationRunDetails")" class="govuk-link govuk-link--no-visited-state">@run.Name</a>
                            }
                            else
                            {
                                @run.Name
                            }
                        </h3>
                        <p class="govuk-body">
                            Calculation ID: @run.Id
                            <br />
                            Date: @run.CreatedAt
                            <br />
                            Run by: @run.CreatedBy
                        </p>
                    </dt>
                    <dd class="govuk-summary-list__actions">
                        <strong class="@run.TagStyle">
                            @run.Status
                        </strong>
                    </dd>
                </div>
            }
        </dl>
    </div>
</div>