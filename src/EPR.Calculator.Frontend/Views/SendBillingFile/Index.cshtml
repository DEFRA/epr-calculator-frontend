@using EPR.Calculator.Frontend.ViewModels;
@using EPR.Calculator.Frontend.Constants;
@model SendBillingFileViewModel;


@{ 
    Layout = "_Layout";
}

<partial name="_BackLinkPartial" model="(@Model.BackLink, @Model.CurrentUser)" />

<div class="govuk-width-container ">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                &nbsp; &nbsp; <br>
                <form method="POST" action="classification">
                    <div class="govuk-form-group">
                        <fieldset class="govuk-fieldset" aria-describedby="approval-code-hint">
                            <div class="govuk-form-group">
                                <fieldset class="govuk-fieldset" aria-describedby="approval-code-hint">
                                    <span class="govuk-caption-l">@Model.CalcRunName</span>
                                    <h1 class="govuk-heading-l">@Model.SendBillFileHeading</h1>

                                    <hr class="govuk-section-break govuk-section-break--s govuk-section-break--invisible">
                                    <h3 class="govuk-body-m">@Model.ConfirmationContent.</h3>

                                    <div class="govuk-warning-text">
                                        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                                        <strong class="govuk-warning-text__text">
                                            <span class="govuk-visually-hidden">Warning</span>
                                            @Model.WarningContent
                                        </strong>
                                    </div>
                                </fieldset>
                            </div>
                            <div class="govuk-button-group">
                            </div>

                            <div class="govuk-button-group">
                                <a href="#" class="govuk-button show-continue" style="display: inline;">
                                @ActionLinkLabels.SendBillingFile
                                </a>

                            <a class="govuk-link" href="@Url.Action("Index", "Dashboard")">@ActionLinkLabels.ReturnToDashBoard</a>
                            </div>
                        </fieldset>
                    </div>
                </form>
            </div>
        </div>
</div>