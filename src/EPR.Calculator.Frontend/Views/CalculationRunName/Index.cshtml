@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var BackLink = "Dashboard";
}

<div class="govuk-width-container">

    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <partial name="_BackLinkPartial" model="BackLink" />

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="govuk-form-group">
                    <h1 class="govuk-heading-xl">
                        <label for="calculation-name-1">Calculation name</label>
                    </h1>
                    <p class="govuk-body">Give the calculation a name, so you can easily find it.</p>
                    <div class="govuk-form-group">
                        <input class="govuk-input govuk-input--width-20" id="calculation-name-1" name="calculationname" type="text" autocomplete="cal">
                        <div data-lastpass-icon-root="" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div><br><br><br>
                        
                        <a href="@Url.Action("Index", "CalculationRunConfirmation")" class="govuk-button show-continue" style="display: inline;" type="submit">
                            Run the calculator
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
