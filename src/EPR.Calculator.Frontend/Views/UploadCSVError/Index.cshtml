@{
    ViewData["Title"] = "Run the service administrator calculator - Upload CSV Error";
    var errors = ViewBag.Errors;
}

<div class="govuk-width-container ">

    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">


        <div class="govuk-grid-row" >

            <div class="govuk-grid-column-three-quarters">
                <a href="@Url.Action("Index", "DefaultParameters")" class="govuk-back-link">Back</a>
                </div>
            <div class="govuk-body-s account-info govuk-grid-column-one-quarter" style="margin-top:20px;">
                    <span class="your-name" id="bannerUserName">Jamie Roberts</span> &ensp;
                    <a class="account-link" href="details" id="signout-link">Sign out</a>
                </div>
           
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="govuk-error-summary" data-module="govuk-error-summary">
                    <div role="alert">
                        <h2 class="govuk-error-summary__title">
                            There is a problem with your upload
                        </h2>
                        <div class="govuk-error-summary__body">
                            <ul class="govuk-list govuk-error-summary__list">

                                <li>
                                    The data contained errors
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <h2 class="govuk-heading-s">You will need to update this data before you can upload the spreadsheet successfully.</h2>

                <ol class="govuk-list govuk-list--number">
                    @if (errors != null)
                    {
                        @foreach (var error in errors)
                        {
                            <li> @error.ErrorMessage</li>
                        }
                    }
                </ol>

                <div>
                    <h1 class="govuk-heading-l"><label for="file-upload-1">Upload the file again</label></h1>

                    @using (Html.BeginForm("Upload", "UploadCSVError", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="govuk-form-group">
                            <input class="govuk-file-upload form-control" id="file-upload-1" name="fileUpload" type="file">
                        </div>

                        <button id="btnUploadFile" type="submit" class="govuk-button" data-module="govuk-button">
                            Upload file
                        </button>
                    }
                </div>
            </div>
        </div>

    </main>
</div>
