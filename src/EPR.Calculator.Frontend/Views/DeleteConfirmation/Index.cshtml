@model CalculatorRunStatusUpdateViewModel
@{
    ViewData["Title"] = "Index";
}

<main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
	<partial name="_CurrentUserPartial" model="@Model.CurrentUser" />
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <br />
            <h1 class="govuk-heading-xl">You have successfully deleted this calculation</h1>
            <span class="govuk-caption-xl">@Model.Data.CalcName</span><br />
            <p class="govuk-body">ID: @Model.Data.RunId</p>
            <hr>
            <br />
            @using (Html.BeginForm("Index", "Dashboard", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="answers-checked" value="true">
                <div class="govuk-button-group">
                    <a href="@Url.Action("Index", "Dashboard")" class="govuk-button" type="submit">Return to the dashboard</a>
                </div>
            }
        </div>
    </div>
</main>