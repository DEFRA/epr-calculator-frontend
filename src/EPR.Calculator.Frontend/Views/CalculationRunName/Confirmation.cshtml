@model EPR.Calculator.Frontend.ViewModels.InitiateCalculatorRunModel
﻿@using EPR.Calculator.Frontend.Constants
﻿@{
    Layout = "_Layout";

    var calculationName = ViewBag.RunName;

    var model = new ConfirmationViewModel
            {
                Title = "You have started a calculation",
                Body = calculationName,
                NextText = " It will take up to 15 minutes for the calculation to finish. You will be able to view it in the list of calculations on the dashboard."
            };
}

<partial name="_ConfirmationPartial" model="model" />